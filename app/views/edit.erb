<h1>Edit your station</h1>


<form action="/stations/<%= @station.id %>" method="post">
  <p>Edit</p>
  <input type="hidden" name="_method" value="PUT" />

  <label for="station_name">Station Name</label>
  <input type='text' name='station[name]' value="<%= @station.name %>"/><br/>

  <label for="dock_count">Dock Count</label>
  <input type='text' name='station[dock_count]' value="<%= @station.dock_count %>"/><br/>

  <label for="city">City</label>
  <input type='text' name='station[city]' value="<%= @station.city %>"/><br/>

  <label for="installation_date">Installation Date</label>
  <input type='text' name='station[installation_date]' value="<%= @station.installation_date   %>"/><br/>

  <input type='submit'/>
</form>
